pipeline {
    agent any

    environment {
        DOCKERHUB_USERNAME = 'resmasre'          // ‚úÖ Docker Hub username
        IMAGE_NAME = 'final'                     // ‚úÖ Your image name
        DOCKER_CREDENTIALS_ID = 'dockerhub-creds' // üîê Jenkins credentials ID
    }

    stages {

        stage('Checkout Code') {
            steps {
                git 'https://github.com/Resmasre/Final.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    echo "Installing NPM packages..."
                    npm install
                    npm run build
                '''
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS_ID) {
                        def image = docker.build("${DOCKERHUB_USERNAME}/${IMAGE_NAME}")
                        image.push("latest")
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh '''
                    echo "Deploying to Kubernetes..."
                    kubectl apply -f deployment.yaml
                    echo "Use this command to access service:"
                    minikube service final --url
                '''
            }
        }
    }
}
